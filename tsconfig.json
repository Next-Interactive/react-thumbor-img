{
  "compilerOptions": {
    "outDir": "./build",
    "declarationDir": "./build",
    "declaration": true,
    "noImplicitAny": true,
    "module": "es2015",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "target": "es6",
    "moduleResolution": "node"
  },
  "include": ["./module/**/*"]
}
